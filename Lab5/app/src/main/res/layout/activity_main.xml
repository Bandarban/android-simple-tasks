<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp" android:id="@+id/word" android:layout_marginLeft="10px"
                android:layout_marginTop="25px" android:layout_marginRight="10px" android:layout_marginBottom="25px"
                android:gravity="center" android:textSize="24sp" android:editable="false" android:inputType="text"
                android:textIsSelectable="true" android:hint="@string/word"/>
        <TextView
                android:hint="@string/translation"
                android:layout_width="match_parent"
                android:layout_height="39dp" android:id="@+id/translation" android:layout_marginLeft="10px"
                android:layout_marginTop="25px" android:layout_marginRight="10px" android:layout_marginBottom="25px"
                android:gravity="center" android:textSize="24sp" android:inputType="none"/>
        <TextView
                android:hint="@string/wordType"
                android:layout_width="match_parent"
                android:layout_height="39dp" android:id="@+id/wordType" android:layout_marginLeft="10px"
                android:layout_marginTop="25px" android:layout_marginRight="10px" android:layout_marginBottom="25px"
                android:gravity="center" android:textSize="24sp" android:inputType="none"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <Button
                android:text="@string/find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button" android:onClick="findWord"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>